<?xml version="1.0"?>
<arguments xmlns="http://www.w3schools.com"
		   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		   xsi:schemaLocation="http://www.w3schools.com testWrite.xsd">
		   
	<argument type = "positional">
		<name>Length</name>
		<description>The length of the shape</description>
		<type>STRING</type>
	</argument>

	<argument type = "named">
		<name>Color</name>
		<group>Group 1</group>
		<shorthand>C</shorthand>
		<description>The color of the shape</description>
		<type>STRING</type>
		<default>red</default>
	</argument>

	<argument type = "named">
		<name>Flag</name>
		<group>Group 1</group>
		<description>Is there a flag</description>
		<type>BOOLEAN</type>
		<default>false</default>
	</argument>

</arguments>