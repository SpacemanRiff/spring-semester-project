<?xml version="1.0"?>
<arguments xmlns="http://www.w3schools.com"
		   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		   xsi:schemaLocation="http://www.w3schools.com testWriteRequired.xsd">
		   
	<argument type = "positional">
		<name>Length</name>
		<description>The length of the shape</description>
		<type>STRING</type>
	</argument>

	<argument type = "named">
		<name>Color</name>
		<shorthand>C</shorthand>
		<description>The color of the shape</description>
		<type>STRING</type>
		<default>red</default>
	</argument>

	<argument type = "required">
		<name>Required</name>
		<description>A required argument</description>
		<type>STRING</type>
		<default>HELLO</default>
	</argument>

</arguments>